{
  "manifest_version": 2,

  "name": "guideMe",
  "description": "Guide me through the process of learning how to use a web platform ",
  "version": "1.0",
  "options_page": "options.html",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "history",
    "contextMenus",
    "*://*/*"
  ],
  "content_scripts": [
  {
    "matches": ["*://*/*"],
    "js": ["lib/jquery-1.9.1.js","lib/underscore.js", "lib/URI.js", "lib/guiders/guiders.js", "overlay.js"],
    "css":["overlay.css", "lib/guiders/guiders.css"]
  }],
  "background": {
    "scripts": ["lib/jquery-1.9.1.js", "lib/underscore.js", "settings.js", "action.js", "guideme.js"]
  },
  "page_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16":"images/icon.png",
    "48":"images/icon.png",
    "128":"images/icon.png"
  }
}